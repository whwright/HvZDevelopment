<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp"
    tools:context=".ProfileActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.74"
        android:paddingTop="15dp" >

        <ImageView
            android:id="@+id/profileactivity_avatar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description_avatar"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/profileactivity_name_textview"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textIsSelectable="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/profileactivity_slogan_textview"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:textIsSelectable="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.34" >

        <ImageButton
            android:id="@+id/profileactivity_achievements"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
           	android:contentDescription="@string/content_description_achievements"
            android:src="@android:drawable/btn_star" />
        
        <ImageButton
            android:id="@+id/profileactivity_messages"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:contentDescription="@string/content_description_messages"
            android:src="@android:drawable/btn_star" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1">
    </LinearLayout>

</LinearLayout>
