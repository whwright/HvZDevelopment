<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LandingPageActivity" >

    <View
        android:id="@+id/centerVerticalLine"
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#000000" />

    <View
        android:id="@+id/centerHorizontalLine"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#000000" />

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/centerVerticalLine"
        android:src="@drawable/profile" />

    <ImageButton
        android:id="@+id/chatroom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/profile"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/centerVerticalLine"
        android:src="@drawable/chat" />

    <ImageButton
        android:id="@+id/mission"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/profile"
        android:layout_alignLeft="@+id/profile"
        android:layout_marginBottom="25dp"
        android:src="@drawable/missions" />

    <ImageButton
        android:id="@+id/report"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/chatroom"
        android:layout_alignTop="@+id/mission"
        android:src="@drawable/kill_report" />

    <ImageButton
        android:id="@+id/killboard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/profile"
        android:layout_below="@+id/profile"
        android:layout_marginTop="25dp"
        android:src="@drawable/kill_board" />

    <ImageButton
        android:id="@+id/killmap"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/chatroom"
        android:layout_alignTop="@+id/killboard"
        android:src="@drawable/kill_map" />

    <TextView
        android:id="@+id/missionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mission"
        android:layout_below="@+id/report"
        android:text="Mission"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/reportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/missionText"
        android:layout_alignBottom="@+id/missionText"
        android:layout_alignLeft="@+id/report"
        android:text="Kill Report"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profile"
        android:layout_below="@+id/profile"
        android:text="Profile"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/chatroomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chatroom"
        android:layout_below="@+id/chatroom"
        android:text="Chatroom"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/killboardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/killboard"
        android:layout_below="@+id/killboard"
        android:text="Kill Board"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/killmapText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/killmap"
        android:layout_below="@+id/killmap"
        android:text="Kill Map"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Welcome, Joe"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>