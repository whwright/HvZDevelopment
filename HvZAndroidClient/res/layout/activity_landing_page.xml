<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context=".LandingPageActivity" >
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/landing_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_welcome"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal" >

        <ImageButton
            android:id="@+id/landing_mission"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/missions" 
			android:layout_weight="1"
            android:scaleType="fitCenter"/>			

        <ImageButton
            android:id="@+id/landing_report"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/kill_report"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>
            

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal" >

        <ImageButton
            android:id="@+id/landing_profile"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/profile"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/landing_chatroom"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/chat"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal" >

        <ImageButton
            android:id="@+id/landing_killboard"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/kill_board"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/landing_achievements"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/kill_map" />

    </LinearLayout>

</LinearLayout>